@{
    ViewData["Title"] = "Reservation Reports";
    var startDate = ViewData["StartDate"] as string;
    var endDate = ViewData["EndDate"] as string;
    var statuses = ViewBag.Statuses as SelectList;
}

<div class="mb-4 d-flex justify-content-between align-items-center">
    <h1 class="display-6 fw-bold">
        <i class="bi bi-file-earmark-excel"></i> Reservation Reports
    </h1>
    <a asp-action="Index" class="btn btn-secondary">
        <i class="bi bi-arrow-left"></i> Back to List
    </a>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="card shadow">
            <div class="card-header bg-success text-white">
                <h5 class="card-title mb-0">Export Reservation Data</h5>
            </div>
            <div class="card-body">
                <form asp-action="ExportReport" method="post">
                    <div class="row">
                        <div class="col-md-4">
                            <div class="mb-3">
                                <label for="startDate" class="form-label">Start Date</label>
                                <input type="date" id="startDate" name="startDate" class="form-control" value="@startDate" required />
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="mb-3">
                                <label for="endDate" class="form-label">End Date</label>
                                <input type="date" id="endDate" name="endDate" class="form-control" value="@endDate" required />
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="mb-3">
                                <label for="status" class="form-label">Status (Optional)</label>
                                <select id="status" name="status" class="form-select">
                                    <option value="">All Statuses</option>
                                    @foreach (var item in statuses)
                                    {
                                        <option value="@item.Value">@item.Text</option>
                                    }
                                </select>
                            </div>
                        </div>
                    </div>
                    
                    <div class="alert alert-info">
                        <i class="bi bi-info-circle"></i> The report will include all reservations within the selected date range. If a status is selected, only reservations with that status will be included.
                    </div>
                    
                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-success">
                            <i class="bi bi-file-earmark-excel"></i> Generate Excel Report
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('form').submit(function() {
                const startDate = new Date($('#startDate').val());
                const endDate = new Date($('#endDate').val());
                
                if (endDate < startDate) {
                    alert('End date must be after or equal to start date');
                    return false;
                }
                
                return true;
            });
        });
    </script>
}
