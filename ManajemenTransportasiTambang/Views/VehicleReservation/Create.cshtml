@using ManajemenTransportasiTambang.Models
@model VehicleReservation
@{
    ViewData["Title"] = "Create Reservation";
    var vehicles = ViewBag.Vehicles as SelectList;
    var drivers = ViewBag.Drivers as SelectList;
    var approvers = ViewBag.Approvers as SelectList;
}

<div class="mb-4 d-flex justify-content-between align-items-center">
    <h1 class="display-6 fw-bold">
        <i class="bi bi-plus-circle"></i> Create Reservation
    </h1>
    <a asp-action="Index" class="btn btn-secondary">
        <i class="bi bi-arrow-left"></i> Back to List
    </a>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="card shadow">
            <div class="card-header bg-primary text-white">
                <h5 class="card-title mb-0">Reservation Information</h5>
            </div>
            <div class="card-body">
                <form asp-action="Create" method="post">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="Purpose" class="form-label">Purpose</label>
                                <input asp-for="Purpose" class="form-control" required />
                                <span asp-validation-for="Purpose" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="StartDate" class="form-label">Start Date & Time</label>
                                <input asp-for="StartDate" class="form-control" type="datetime-local" required />
                                <span asp-validation-for="StartDate" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="EndDate" class="form-label">End Date & Time</label>
                                <input asp-for="EndDate" class="form-control" type="datetime-local" required />
                                <span asp-validation-for="EndDate" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="VehicleId" class="form-label">Vehicle</label>
                                <select asp-for="VehicleId" asp-items="vehicles" class="form-select" required>
                                    <option value="">-- Select a vehicle --</option>
                                </select>
                                <span asp-validation-for="VehicleId" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="DriverId" class="form-label">Driver</label>
                                <select asp-for="DriverId" asp-items="drivers" class="form-select" required>
                                    <option value="">-- Select a driver --</option>
                                </select>
                                <span asp-validation-for="DriverId" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="Origin" class="form-label">Origin</label>
                                <input asp-for="Origin" class="form-control" />
                                <span asp-validation-for="Origin" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="Destination" class="form-label">Destination</label>
                                <input asp-for="Destination" class="form-control" />
                                <span asp-validation-for="Destination" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="EstimatedDistance" class="form-label">Estimated Distance (km)</label>
                                <input asp-for="EstimatedDistance" class="form-control" type="number" min="0" />
                                <span asp-validation-for="EstimatedDistance" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="Notes" class="form-label">Notes</label>
                                <textarea asp-for="Notes" class="form-control" rows="3"></textarea>
                                <span asp-validation-for="Notes" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label class="form-label">Approvers</label>
                                <div class="card">
                                    <div class="card-body">
                                        <p class="text-muted small mb-2">Select at least two approvers in order of approval hierarchy:</p>
                                        <div class="approvers-list" id="approverList">
                                            <div class="approver-item mb-2">
                                                <div class="input-group">
                                                    <span class="input-group-text">Level 1</span>
                                                    <select name="approverIds" class="form-select approver-select" required>
                                                        <option value="">-- Select an approver --</option>
                                                        @foreach (var item in approvers)
                                                        {
                                                            <option value="@item.Value">@item.Text</option>
                                                        }
                                                    </select>
                                                </div>
                                            </div>
                                            <div class="approver-item mb-2">
                                                <div class="input-group">
                                                    <span class="input-group-text">Level 2</span>
                                                    <select name="approverIds" class="form-select approver-select" required>
                                                        <option value="">-- Select an approver --</option>
                                                        @foreach (var item in approvers)
                                                        {
                                                            <option value="@item.Value">@item.Text</option>
                                                        }
                                                    </select>
                                                </div>
                                            </div>
                                        </div>
                                        <button type="button" id="addApproverBtn" class="btn btn-sm btn-outline-secondary mt-2">
                                            <i class="bi bi-plus-circle"></i> Add Another Approver
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="bi bi-x-circle"></i> Cancel
                        </a>
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-save"></i> Create Reservation
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        // Function to add approval level
        $(document).ready(function() {
            let approvalLevelCount = 2;
            
            $('#addApproverBtn').click(function() {
                approvalLevelCount++;
                
                const newApproverHtml = `
                    <div class="approver-item mb-2">
                        <div class="input-group">
                            <span class="input-group-text">Level ${approvalLevelCount}</span>
                            <select name="approverIds" class="form-select approver-select" required>
                                <option value="">-- Select an approver --</option>
                                @foreach (var item in approvers)
                                {
                                    <option value="@item.Value">@item.Text</option>
                                }
                            </select>
                            <button type="button" class="btn btn-outline-danger remove-approver">
                                <i class="bi bi-dash-circle"></i>
                            </button>
                        </div>
                    </div>
                `;
                
                $('#approverList').append(newApproverHtml);
                
                // Add remove functionality to the new button
                $('.remove-approver').last().click(function() {
                    $(this).closest('.approver-item').remove();
                });
            });
            
            // Validate date ranges
            $('form').submit(function() {
                const startDate = new Date($('#StartDate').val());
                const endDate = new Date($('#EndDate').val());
                
                if (endDate <= startDate) {
                    alert('End date must be after start date');
                    return false;
                }
                
                return true;
            });
        });
    </script>
}
